@model UsuariosMVC.Models.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link type="text/css" href="~/Styles/StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <form method="post" action="/Home/Ingresar">

        <img src="~/Img/usuarioLogin.png" class="img-fluid" />
        <div class="form-group mt-3">
            @Html.TextBoxFor(m => m.Usu_Name, new { @class = "form-control", maxlength = "30", @placeholder = "Usuario" })
            @Html.ValidationMessageFor(m => m.Usu_Name, "", new { @class = "text-danger" })

        </div>
        <div class="form-group mt-3">
            @Html.PasswordFor(m => m.Usu_Pass, new { @class = "form-control", maxlength = "30", @placeholder = "Contraseña" })
            @Html.ValidationMessageFor(m => m.Usu_Pass, "", new { @class = "text-danger" })
        </div>
        @if(TempData["datosIncorrectos"] != null)
        {
           <label class="text-danger">*Usuario o Contraseña incorrectos.</label>
        }

        <button class="btn btn-primary btn-lg btn-block mt-sm-3" type="submit">Ingresar</button>
    </form>

    <footer class="footer-copyright text-center py-3">
        Alfredo - 2020
    </footer>

    <script src="~/scripts/jquery-3.0.0.min.js"></script>
    <script src="~/scripts/jquery.validate.min.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
